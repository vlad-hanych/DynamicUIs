<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/myPreferencesHeaderColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="My Preferences"
            />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#efeff0"
        />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_below="@+id/view1"
        android:layout_above="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            >

        <LinearLayout
            android:id="@+id/dynamicalPreferencesContainer_lilLay_AMPD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            >

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/view2"
        android:layout_above="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#efeff0"
        />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:background="@android:color/white"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:background="@android:color/white"
            android:textAllCaps="false"
            android:textColor="#435773"
            android:text="Reset"
            />

        <Button
            android:id="@+id/save_butt_AMP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:background="#ffe32e"
            android:textAllCaps="false"
            android:textColor="#435773"
            android:text="Save"
            />

    </LinearLayout>

</RelativeLayout>
